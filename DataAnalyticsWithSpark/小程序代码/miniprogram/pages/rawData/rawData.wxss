page{
  background-color: #f3f3f3;
}

.back{
  font-size: 60rpx;
  padding-top: 12%;
  padding-bottom: 30rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  color: cadetblue;
}

.title{
  margin-top: 1%;
  margin-left: 20rpx;
  font-size: 36rpx;
  color: #414040;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 70rpx;
  padding-right: 30rpx;
  width: 38%;
  height: 40%;
  margin-top: 1%;
  margin-left: 3%;
  border-radius: 15rpx;
  box-sizing: border-box;
  z-index: 1;
  background-color: #E8E8E8;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 12px;
}

.table {
  display: flex;
  flex-direction: column;     /* 排列形式: 向下 */
  margin-top: 20px;
  margin-bottom: 50px;
}

.tr {
  width: 205%;    
  display: flex;
  flex-direction: row;
}

.th_1, .th_2, .th_3, .th_4, .th_5, .th_6, .th_7, .th_8, 
.td_1, .td_2, .td_3, .td_4, .td_5, .td_6, .td_7, .td_8 { /* 公有的属性 */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;            /* 自动换行 */
  text-align: center;         /* 文本居中 */
  justify-content:center;     /* 主轴居中 */
  align-items: center;        /* 交叉轴居中 */
  border-top: 1px solid #dadada;      /* 单元格上线框 */
  border-bottom: 1px solid #dadada;   /* 单元格下线框 */
  border-left: 1px solid #dadada;     /* 单元格左线框 */
  border-right: 1px solid #dadada;    /* 单元格右线框 */
}

.th_1, .th_2, .th_3, .th_4,
.th_5, .th_6, .th_7, .th_8{
  font-weight: 800;           /* 字体加重 */
  background-color:cadetblue;   /* 背景色 */
}

.td_1, .td_2, .td_3, .td_4,
.td_5, .td_6, .td_7, .td_8 {
  background-color:#ffffff;   /* 背景色 */
}

.th_1, .td_1 {
  width: 20%;
}

.th_2, .td_2 {
  width: 40%;
}

.th_3, .td_3 {
  width: 25%;
}

.th_4, .td_4 {
  width: 20%;
}

.th_5, .td_5 {
  width: 20%;
}

.th_6, .td_6 {
  width: 20%;
}

.th_7, .td_7 {
  width: 40%;
}

.th_8, .td_8 {
  width: 20%;
}
